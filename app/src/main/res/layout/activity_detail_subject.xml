<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@drawable/cardview_select"
                card_view:cardCornerRadius="7dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="7dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/subject_routine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:text="Routine"
                            android:textColor="@color/logo_colour_dark"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:id="@+id/options_routine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_more_vert_black_24dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light"
                        android:paddingBottom="2dp" />

                    <ImageView
                        android:id="@+id/subject_routine_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:visibility="visible" />

                    <include layout="@layout/routine_show_layout" />

                    <TextView
                        android:id="@+id/subject_routine_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp"
                        android:text="Last Updated by " />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@drawable/cardview_select"
                card_view:cardCornerRadius="7dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="7dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/subject_notes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:text="Notes"
                            android:textColor="@color/logo_colour_dark"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:id="@+id/options_notes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_more_vert_black_24dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light"
                        android:paddingBottom="2dp" />


                    <ImageView
                        android:id="@+id/subject_notes_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:visibility="visible" />

                    <include layout="@layout/notes_show_layout" />

                    <TextView
                        android:id="@+id/subject_notes_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp"
                        android:text="Last Updated by " />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@drawable/cardview_select"
                card_view:cardCornerRadius="7dp"
                card_view:cardElevation="5dp"
                card_view:contentPadding="7dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/subject_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="7dp"
                            android:paddingTop="7dp"
                            android:text="Deadline"
                            android:textColor="@color/logo_colour_dark"
                            android:textSize="17dp"
                            android:textStyle="italic" />

                        <ImageView
                            android:id="@+id/options_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_more_vert_black_24dp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light"
                        android:paddingBottom="2dp" />


                    <ImageView
                        android:id="@+id/subject_deadline_add"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:foregroundGravity="center"
                        android:paddingTop="10dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:visibility="visible" />

                    <include layout="@layout/deadline_show_layout" />

                    <TextView
                        android:id="@+id/subject_deadline_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp"
                        android:text="Last Updated by " />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>